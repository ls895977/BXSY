<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 填充的颜色 -->
    <solid android:color="#E2C07C" />

    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="@dimen/dip_30" />

    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:bottom="@dimen/dip_5"
        android:left="@dimen/dip_5"
        android:right="@dimen/dip_5"
        android:top="@dimen/dip_5" />
</shape>