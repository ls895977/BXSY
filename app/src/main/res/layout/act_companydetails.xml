<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFEFF1F4"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEFF1F4"
            android:paddingBottom="@dimen/dip_25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_120"
                android:background="#FF1CA9F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_130"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginTop="@dimen/dip_40"
                android:layout_marginRight="@dimen/dip_20"
                android:background="@drawable/bg_qiye_bg3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_25"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_15"
                    android:paddingLeft="@dimen/dip_15"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_14sp" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:text="权益声明：彼信所有数据均来源于大数据自动化爬虫抓取公开数据并整理，若有侵犯您的权益请联系客服删除"
                android:textColor="@color/white"
                android:textSize="@dimen/fond_10sp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_zhuyingyewu"
                android:drawablePadding="@dimen/dip_5"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_15"
                android:text="主营业务"
                android:textColor="#FF333333"
                android:textSize="@dimen/fond_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TypeDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_20"
                android:paddingRight="@dimen/dip_10"
                android:paddingBottom="@dimen/dip_15"
                android:textColor="#FF666666"
                android:textSize="@dimen/fond_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:drawableLeft="@mipmap/icon_youxiang"
                android:drawablePadding="@dimen/dip_5"
                android:text="邮箱"
                android:textColor="#FF333333"
                android:textSize="@dimen/fond_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_15"
                android:textColor="#FF666666"
                android:textSize="@dimen/fond_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_01"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:drawableLeft="@mipmap/icon_youxiang"
                android:drawablePadding="@dimen/dip_5"
                android:text="官网"
                android:textColor="#FF333333"
                android:textSize="@dimen/fond_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_15"
                android:textColor="#FF666666"
                android:textSize="@dimen/fond_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_01"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:drawableLeft="@mipmap/icon_youxiang"
                android:drawablePadding="@dimen/dip_5"
                android:text="地址 "
                android:textColor="#FF333333"
                android:textSize="@dimen/fond_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/companyadress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_15"
                android:textColor="#FF666666"
                android:textSize="@dimen/fond_13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/jilv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_01"
            android:background="@color/white"
            android:drawableRight="@mipmap/icon_right"
            android:paddingLeft="@dimen/dip_10"
            android:paddingTop="@dimen/dip_10"
            android:paddingRight="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_10"
            android:text="历史记录"
            android:textColor="#FF333333"
            android:textSize="@dimen/fond_14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <Button
        android:id="@+id/bt_rtn_err"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/bottom_title"

        android:background="@drawable/bg_radius_bigrad_blue"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:text="信息报错！"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:id="@+id/bottom_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/bt_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/tv_collection"
            android:paddingTop="5dp"
            android:text="收藏"
            android:textColor="@color/black_textview"
            android:textSize="@dimen/textSize_small" />

        <Button
            android:id="@+id/bt_zhuanfa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/icon_share"
            android:paddingTop="5dp"

            android:text="转发"
            android:textColor="@color/black_textview"
            android:textSize="@dimen/textSize_small" />

        <Button
            android:id="@+id/bt_Sendmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@mipmap/icon_duanx"
            android:paddingTop="5dp"
            android:text="短信"
            android:textColor="@color/black_textview"
            android:textSize="@dimen/textSize_small" />

        <Button
            android:id="@+id/bt_newCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@mipmap/icon_calll"

            android:paddingTop="5dp"
            android:text="电话"
            android:textColor="@color/black_textview"
            android:textSize="@dimen/textSize_small" />


    </LinearLayout>



</RelativeLayout>
