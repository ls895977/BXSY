<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Service_provider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_120"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginTop="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_10"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@mipmap/rmxw" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_8"
        android:layout_marginTop="@dimen/dip_10"
        android:background="#FFEFF1F4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dip_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公告需求"
            android:textColor="#FF333333"
            android:textSize="@dimen/fond_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/More"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/icon_right"
            android:drawablePadding="@dimen/dip_5"
            android:text="更多"
            android:textColor="#FF999999" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_01"
        android:background="#FFEFF1F4" />
</LinearLayout>
