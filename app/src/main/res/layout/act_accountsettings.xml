<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#EFF1F4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:background="@color/white">

        <ImageView
            android:id="@+id/account_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dip_10"
            android:padding="@dimen/dip_5"
            android:src="@mipmap/icon_friends_back" />

        <TextView
            android:id="@+id/btn_conversation_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:text="帐号设置"
            android:textColor="@color/black_textview"
            android:textSize="@dimen/textSize_big"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@color/white"
        android:drawableRight="@mipmap/icon_right"
        android:paddingLeft="@dimen/dip_10"
        android:paddingTop="@dimen/dip_15"
        android:paddingRight="@dimen/dip_10"
        android:paddingBottom="@dimen/dip_15"
        android:text="账号与安全"
        android:textColor="#333333"
        android:textSize="@dimen/fond_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_1"
        android:background="@color/white"
        android:drawableRight="@mipmap/icon_right"
        android:paddingLeft="@dimen/dip_10"
        android:paddingTop="@dimen/dip_15"
        android:paddingRight="@dimen/dip_10"
        android:paddingBottom="@dimen/dip_15"
        android:text="消息提醒"
        android:textColor="#333333"
        android:textSize="@dimen/fond_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_1"
        android:background="@color/white"
        android:drawableRight="@mipmap/icon_right"
        android:padding="@dimen/dip_10"
        android:paddingLeft="@dimen/dip_10"
        android:paddingTop="@dimen/dip_15"
        android:paddingRight="@dimen/dip_10"
        android:paddingBottom="@dimen/dip_15"
        android:text="防骚扰模式"
        android:textColor="#333333"
        android:textSize="@dimen/fond_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_1"
        android:background="@color/white"
        android:drawableRight="@mipmap/icon_right"
        android:paddingLeft="@dimen/dip_10"
        android:paddingTop="@dimen/dip_15"
        android:paddingRight="@dimen/dip_10"
        android:paddingBottom="@dimen/dip_15"
        android:text="声音调试"
        android:textColor="#333333"
        android:textSize="@dimen/fond_14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_1"
        android:background="@color/white"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dip_10"
            android:paddingTop="@dimen/dip_15"
            android:paddingRight="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_15"
            android:text="版本号"
            android:textColor="#333333"
            android:textSize="@dimen/fond_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:drawableRight="@mipmap/icon_right"
            android:drawablePadding="@dimen/dip_10"
            android:padding="@dimen/dip_10"
            android:paddingRight="@dimen/dip_10"
            android:text="3.6"
            android:textColor="#333333"
            android:textSize="@dimen/fond_14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_1"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dip_10"
            android:paddingTop="@dimen/dip_15"
            android:paddingRight="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_15"
            android:text="自动登录"
            android:textColor="#333333"
            android:textSize="@dimen/fond_14sp" />

        <com.maoyongxin.myapplication.view.SwitchButton
            android:id="@+id/sw_isauto"
            style="@style/SwitchButtonStyle"
            android:layout_width="48dip"
            android:layout_height="28dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:kswAnimationDuration="300"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            app:kswBackMeasureRatio="1.4"
            app:kswThumbDrawable="@drawable/ios_thumb"
            app:kswThumbMarginBottom="-8dp"
            app:kswThumbMarginLeft="-5dp"
            app:kswThumbMarginRight="-5dp"
            app:kswThumbMarginTop="-2.5dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_doLogout"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dip_20"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="退出"
        android:textColor="#4E7AEC"
        android:textSize="@dimen/textSize_big" />
</LinearLayout>
