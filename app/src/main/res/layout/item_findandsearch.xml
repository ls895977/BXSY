<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/dip_10">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/mine_header"
                android:layout_width="@dimen/dip_40"
                android:layout_height="@dimen/dip_40"
                android:scaleType="centerCrop"
                android:src="@mipmap/huangye"
                app:riv_border_color="#333333"
                app:riv_corner_radius="@dimen/dip_5"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dip_10">

                <TextView
                    android:id="@+id/findandsearch_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小木古"
                    android:textColor="#333333"
                    android:textSize="@dimen/fond_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/findandsearch_Context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诚心做人，精心做事。  "
                    android:textColor="#666666"
                    android:textSize="@dimen/fond_12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/find_add"
            android:layout_width="@dimen/dip_50"
            android:layout_height="@dimen/dip_20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dip_10"
            android:background="@drawable/tv_find"
            android:gravity="center"
            android:text="查看"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_12sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_1"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_10"
        android:background="#f0f0f0" />
</LinearLayout>