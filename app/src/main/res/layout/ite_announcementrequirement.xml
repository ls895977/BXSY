<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/album_dp_10">
<View
    android:layout_width="3dp"
    android:layout_height="match_parent"
    android:background="@color/blue_tiny"
    />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/zhihutitl_hader"
        android:layout_width="@dimen/dip_70"
        android:layout_height="@dimen/dip_70"
        android:scaleType="centerCrop"
        android:src="@mipmap/huangye"
        app:riv_border_color="#333333"
        app:riv_corner_radius="@dimen/dip_5"
        app:riv_mutate_background="true"
        app:riv_tile_mode="repeat"
        android:visibility="gone"
        />

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dip_10"
        android:layout_gravity="center_vertical"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哈哈"
        android:singleLine="true"
        android:textColor="#FF333333"
        android:textSize="@dimen/fond_16sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/publishadress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="四川-成都"
        android:textSize="@dimen/fond_12sp"



        />
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/album_dp_10"
                android:text="哈哈"
                android:textColor="#FF999999"
                android:textSize="@dimen/fond_12sp"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:singleLine="true"/>


            <TextView
                android:id="@+id/publishtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="time"
                android:textSize="@dimen/fond_12sp"
                android:paddingTop="@dimen/album_dp_10"
                android:textColor="@color/RED"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
