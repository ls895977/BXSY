<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dip"
    android:id="@+id/view_dynamic_hader_rel"
    android:paddingRight="@dimen/dip_3"
    android:paddingLeft="@dimen/dip_3"
    android:layout_height="@dimen/dip_85">
    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/huangye"
        app:riv_border_color="#333333"
        app:riv_corner_radius="@dimen/dip_5"
        app:riv_mutate_background="true"
        app:riv_tile_mode="repeat" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hotchagroup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创业锦囊"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dip_2"
                android:src="@mipmap/icon_ren" />

            <TextView
                android:id="@+id/hotchagroup_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dip_2"
                android:text="555"
                android:textSize="@dimen/fond_12sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
