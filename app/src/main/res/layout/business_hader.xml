<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0.3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dip_10">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/notice_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/huangye"
                app:riv_border_color="#333333"
                app:riv_corner_radius="@dimen/dip_5"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat" />


                <TextView
                    android:id="@+id/notice_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="新闻标题"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_16sp"
                    android:textStyle="normal" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/notice_sender1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="2018/8/8"
                            android:textColor="@color/def_sub_3_gray_99"
                            android:textSize="@dimen/textSize_small" />

                        <TextView
                            android:id="@+id/notice_sender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:drawableLeft="@mipmap/readed"
                            android:drawablePadding="3dp"
                            android:text=""
                            android:textColor="@color/def_sub_3_gray_99"
                            android:textSize="@dimen/textSize_small" />
                    </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注最多"
                    android:textColor="@color/white"
                    android:padding="3dp"
                    android:layout_margin="3dp"
                    android:textSize="@dimen/textSize_normal"
                    android:background="@color/btn_green_color"
                    android:layout_gravity="right"
                    />
                </LinearLayout>

            </RelativeLayout>






    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white_somoke"
        android:layout_alignParentBottom="true"
        />



</LinearLayout>
