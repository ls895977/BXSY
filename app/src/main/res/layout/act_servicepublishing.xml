<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:background="@color/blue">

            <ImageView
                android:id="@+id/friends_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dip_10"
                android:padding="@dimen/dip_5"
                android:src="@mipmap/back_white" />

            <TextView
                android:id="@+id/btn_conversation_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:text="我 的 需 求"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_big"
                android:textStyle="bold" />
        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:cardCornerRadius="5dp"
            android:elevation="1dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_1"
                    android:background="#FFEFF1F4" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需求标题"
                    android:textColor="@color/gray"
                    android:paddingLeft="5dp"
                    android:drawableLeft="@mipmap/bluepoint"
                    android:textSize="@dimen/font_size_14sp"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:id="@+id/ServicePublishing_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="我的需求标题"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="@color/black_textview"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="@dimen/fond_14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_1"
                    android:background="#FFEFF1F4"

                    android:layout_margin="5dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需求标题"
                    android:textColor="@color/gray"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/font_size_14sp"
                    android:drawableLeft="@mipmap/redpoint"

                    />
                <EditText
                    android:id="@+id/ServicePublishing_Context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="需求内容"
                    android:minLines="10"
                    android:padding="@dimen/dip_20"
                    android:textColorHint="@color/black_textview"
                    android:textSize="@dimen/fond_14sp" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需求类型"
                android:textColor="@color/gray"
                android:paddingLeft="5dp"
                android:textSize="@dimen/font_size_14sp"
                android:drawableLeft="@mipmap/redpoint"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:id="@+id/service_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_15"
                android:paddingBottom="@dimen/dip_15">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="类型"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_14sp" />
                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="选择" />

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingTop="@dimen/dip_5"
                    android:paddingBottom="@dimen/dip_5"
                    android:src="@mipmap/icon_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_1"
                android:background="#FFEFF1F4" />

            <LinearLayout
                android:id="@+id/service_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_15"
                android:paddingBottom="@dimen/dip_15">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="有效期"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_14sp" />

                <TextView
                    android:id="@+id/service_dateTime"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="选择" />

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingTop="@dimen/dip_5"
                    android:paddingBottom="@dimen/dip_5"
                    android:src="@mipmap/icon_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_1"
                android:background="#FFEFF1F4" />

            <LinearLayout
                android:id="@+id/service_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_15"
                android:paddingBottom="@dimen/dip_15"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="地区"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_14sp" />

                <TextView
                    android:id="@+id/service_tvaddr"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="选择" />

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingTop="@dimen/dip_5"
                    android:paddingBottom="@dimen/dip_5"
                    android:src="@mipmap/icon_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_1"
                android:background="#FFEFF1F4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_15"
                android:paddingBottom="@dimen/dip_15"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址："
                    android:textColor="#FFA1A1A1"
                    android:textSize="@dimen/fond_12sp" />

                <EditText
                    android:id="@+id/service_detailed_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="如道路、门牌号、楼栋号等"
                    android:padding="5dp"
                    android:textColorHint="#FFA1A1A1"
                    android:textSize="@dimen/fond_12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_1"
                android:background="#FFEFF1F4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_15"
                android:paddingBottom="@dimen/dip_15"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="联系电话"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_14sp" />

                <EditText
                    android:id="@+id/ServicePublishing_phone"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"
                    android:hint="输入联系电话"
                    android:padding="@dimen/dip_5"
                    android:textColorHint="#FFA1A1A1"
                    android:textSize="@dimen/fond_12sp" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingTop="@dimen/dip_5"
                    android:paddingBottom="@dimen/dip_5" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_1"
                android:background="#FFEFF1F4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_15"
                android:paddingBottom="@dimen/dip_15">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="预算(元)"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_14sp" />

                <EditText
                    android:id="@+id/ServicePublishing_qq"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"
                    android:hint="您的预算是多少呢"
                    android:padding="@dimen/dip_5"
                    android:textColorHint="#FFA1A1A1"
                    android:textSize="@dimen/fond_12sp" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingTop="@dimen/dip_5"
                    android:paddingBottom="@dimen/dip_5" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/service_coomit"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dip_20"
                    android:background="@drawable/bg_radius_blue_tiny2"
                    android:layout_marginBottom="20dp"
                    android:text="发布"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fond_16sp"
                    android:paddingTop="@dimen/dip_10"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:layout_marginRight="@dimen/dip_20"
                    android:paddingBottom="@dimen/dip_10"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>