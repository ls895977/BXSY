<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/album_dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dip_5"
        android:paddingBottom="@dimen/dip_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cpnNameRcd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FF333333"
            android:layout_weight="1"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textSize="@dimen/fond_16sp" />

        <ImageView
            android:id="@+id/teleInfo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_ctele2" />
        <ImageView
            android:id="@+id/smgInfo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_cmsg2" />

        <ImageView
            android:id="@+id/scInfo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_ilike2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dip_10"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cpnTele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FF666666"
            android:text="13198511889"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rcdTime"
            android:layout_width="wrap_content"
            android:textSize="@dimen/fond_12sp"
            android:textColor="#FF666666"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/album_dp_6"
            android:text="time" />

    </LinearLayout>

</LinearLayout>