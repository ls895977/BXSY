<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#EFF1F4"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dip_5"
        android:paddingBottom="@dimen/dip_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:background="@color/white">

            <ImageView
                android:id="@+id/Recharge_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dip_10"
                android:padding="@dimen/dip_5"
                android:src="@mipmap/icon_friends_back" />

            <TextView
                android:id="@+id/btn_conversation_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:text="购买会员卡"
                android:textColor="@color/black_textview"
                android:textSize="@dimen/textSize_big"
                android:textStyle="bold" />



        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:background="#EFF1F4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_216">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/mine_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_216"
                android:background="@mipmap/icon_nianka"
                android:scaleType="fitXY"
                app:riv_corner_radius="@dimen/dip_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="@dimen/dip_25"
                android:layout_marginRight="@dimen/dip_25"
                android:layout_marginBottom="@dimen/dip_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="会员编号：10000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fond_12sp" />

                <TextView
                    android:id="@+id/vipNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="会员到期日：2018-10-1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fond_12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="会员权益"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="一、彼信服务号优先审核"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="二、需求信息优先推送"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="三、每日可获取信息上限变大（会员用户每日200，普通用户每天只能查询10次，每月上限100次）"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="四、工单信息优先处理"
            android:layout_margin="10dp"
            />


    </LinearLayout>

    <Button
        android:id="@+id/btn_YPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginBottom="@dimen/dip_20"
        android:background="@drawable/bg_radius_orange"
        android:gravity="center"
        android:text="0元开通"
        android:textColor="@color/white"
        android:textSize="@dimen/fond_16sp"
        />
    <TextView
        android:layout_above="@+id/btn_YPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="原价399元,限时优惠"
        android:layout_marginBottom="20dp"

        />
</RelativeLayout>