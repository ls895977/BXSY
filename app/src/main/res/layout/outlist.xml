<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:elevation="0.3dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:padding="@dimen/dip_10">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/notice_image"
                    android:layout_width="@dimen/dip_120"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/huangye"
                    app:riv_border_color="#333333"
                    app:riv_corner_radius="@dimen/dip_5"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="repeat" />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dip_10">

                    <TextView
                        android:id="@+id/notice_title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="活动标题"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/fond_16sp"
                        android:textStyle="normal" />
                    <TextView
                        android:layout_below="@+id/notice_title1"
                        android:id="@+id/notice_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:maxLines="2"
                        android:text="活动介绍"
                        android:textColor="@color/text_tips_color"
                        android:textSize="@dimen/fond_14sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/notice_sender1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="2018/8/8"
                            android:textColor="@color/def_sub_3_gray_99"
                            android:textSize="@dimen/textSize_small" />

                        <TextView
                            android:id="@+id/notice_sender"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:drawableLeft="@mipmap/readed"
                            android:drawablePadding="3dp"
                            android:text=""
                            android:textColor="@color/def_sub_3_gray_99"
                            android:textSize="@dimen/textSize_small" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免费报名"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                android:textColor="@color/white"
                android:background="@color/btn_green_color"
                android:padding="3dp"
                />


        </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white_somoke"
        android:layout_alignParentBottom="true"
        />



</LinearLayout>