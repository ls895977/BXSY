<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dip_10">

    <com.maoyongxin.myapplication.view.SelectableRoundedImageView
        android:id="@+id/img_requestUserHead"
        android:layout_width="@dimen/dip_45"
        android:layout_height="@dimen/dip_45"
        android:scaleType="centerCrop"
        android:src="@mipmap/user_head_img"
        app:sriv_left_bottom_corner_radius="@dimen/dip_5"
        app:sriv_left_top_corner_radius="@dimen/dip_5"
        app:sriv_right_bottom_corner_radius="@dimen/dip_5"
        app:sriv_right_top_corner_radius="@dimen/dip_5" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_5"
        android:layout_weight="3"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_requestUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="毛毛虫"
            android:textColor="@color/def_text_1"
            android:textSize="@dimen/fond_16sp" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:textSize="@dimen/dip_12"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_list_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dip_5"
            android:paddingBottom="5dp"
            android:text=" "
            android:textColor="@color/def_text_3"
            android:textSize="@dimen/fond_12sp" />
    </LinearLayout>
</LinearLayout>
