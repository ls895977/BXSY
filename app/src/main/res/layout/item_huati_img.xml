<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_square_header"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:elevation="0.5dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/huangye"
                    app:riv_corner_radius="@dimen/dip_90"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="repeat" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!--<com.shuyu.textutillib.EmojiLayout-->
                            <!--android:id="@+id/tv_square_person_name"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:background="@null"-->
                            <!--android:gravity="left"-->
                            <!--android:textStyle="bold"-->
                            <!--android:text="毛毛虫"-->
                            <!--android:textSize="@dimen/fond_16sp"-->
                            <!--android:textColor="@color/white" />-->
                        <TextView
                        android:id="@+id/tv_square_person_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="毛毛虫"
                        android:textColor="@color/text_tab"
                        android:textSize="@dimen/textSize_big_dp"
                        android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/ll_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/app_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="彼信商业社区" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_huati_timedate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:text="5小时前"
                        android:textColor="@color/text_deco"
                        android:textSize="@dimen/textSize_small" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingBottom="15dp">

                <io.github.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/tv_square_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text="这是发布的动态信息"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--<com.sendtion.xrichtext.RichTextView-->
                    <!--android:id="@+id/et_new_content"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:rt_view_image_bottom="10"-->
                    <!--app:rt_view_image_height="0"-->
                    <!--app:rt_editor_text_init_hint="#FF666666"-->
                    <!--app:rt_view_text_color="#FF666666"-->
                    <!--app:rt_view_text_size="@dimen/fond_14sp" />-->

                </RelativeLayout>

                <io.github.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/topic_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textSize="@dimen/fond_20sp"
                    android:textColor="@color/black"
                    />

                <io.github.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/tv_square_msgTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dip_5"
                    android:paddingRight="10dp"
                    android:text="这是发布的动态信息"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/textSize_normal"
                    android:visibility="gone" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/item_videoImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/dip_10"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/huangye"
                    app:riv_border_color="#333333"
                    app:riv_corner_radius="@dimen/dip_2"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="repeat" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dip_5">

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_dele" />

            <LinearLayout
                android:id="@+id/ll_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/dip_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_groupName"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dip_22"
                    android:layout_gravity="clip_vertical"
                    android:background="@drawable/icon_square_title1"
                    android:text="#发限发发"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_zan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zanImg"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="@dimen/dip_5"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/good"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/numZan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="#333333"
                    android:textSize="@dimen/textSize_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dip_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/icon_repeat" />

                <TextView
                    android:id="@+id/tv_pinglun_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="#333333"
                    android:textSize="@dimen/textSize_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_share"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/share_icon" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white_somoke" />


</LinearLayout>