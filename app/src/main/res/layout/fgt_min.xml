<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1F4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dip_10"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dip_20"
            android:paddingLeft="@dimen/dip_10"
            android:layout_height="@dimen/dip_70"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/mine_header"
                android:layout_width="@dimen/dip_50"
                android:layout_height="@dimen/dip_50"
                android:scaleType="centerCrop"
                android:src="@mipmap/huangye"
                app:riv_border_color="#333333"
                app:riv_corner_radius="@dimen/dip_5"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/mine_header"
                android:paddingLeft="@dimen/dip_10">

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张萌萌"
                    android:textColor="#333333"
                    android:textSize="@dimen/fond_16sp" />

                <TextView
                    android:id="@+id/tv_idNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="@dimen/dip_5"
                    android:text="ID:7777"
                    android:textColor="#A1A1A1"
                    android:textSize="@dimen/fond_12sp" />

                <TextView
                    android:id="@+id/tv_vipNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_5"
                    android:layout_toRightOf="@+id/tv_userName"
                    android:background="@drawable/icon_huiyuan"
                    android:paddingBottom="@dimen/dip_5"
                    android:text="V1"
                    android:textColor="#D9B56D"
                    android:textSize="@dimen/fond_12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/ziliao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dip_10"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/icon_right"
                android:drawablePadding="@dimen/dip_5"
                android:text="编辑基本信息"
                android:textColor="#A1A1A1"
                android:textSize="@dimen/fond_12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dip_20"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_myfollow"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tv_myFollow"
                    android:layout_width="match_parent"
                    android:text="8"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/fond_16sp"
                    android:textColor="#333333"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="关注"
                    android:gravity="center"
                    android:textSize="@dimen/fond_11sp"
                    android:layout_marginTop="@dimen/dip_5"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_myfriend"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                >
                <TextView
                    android:id="@+id/frendnum"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/fond_16sp"
                    android:textColor="#333333"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="好友"
                    android:gravity="center"
                    android:textSize="@dimen/fond_11sp"
                    android:layout_marginTop="@dimen/dip_5"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_fenshi"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:text="8"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/fond_16sp"
                    android:textColor="#333333"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="关注粉丝"
                    android:gravity="center"
                    android:textSize="@dimen/fond_11sp"
                    android:layout_marginTop="@dimen/dip_5"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/tv_doPay"
            android:layout_marginTop="@dimen/dip_15"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_70"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_chongzhi"
            app:riv_border_color="#333333"
            app:riv_corner_radius="@dimen/dip_3"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat" />
        <TextView
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dip_10"
            android:drawablePadding="@dimen/dip_10"
            android:drawableLeft="@mipmap/icon_tongzhi"
            android:paddingBottom="@dimen/album_dp_15"
            android:paddingTop="@dimen/album_dp_10"
            android:text="我的通知"
            android:paddingRight="@dimen/dip_10"
            android:drawableRight="@mipmap/icon_right"
            android:textColor="#333333"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dip_10"
            android:background="#EFF1F4"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_height="@dimen/dip_1" />

        <TextView
            android:id="@+id/min_mycollection"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dip_10"
            android:drawablePadding="@dimen/dip_10"
            android:drawableLeft="@mipmap/icon_shoucang"
            android:paddingBottom="@dimen/album_dp_15"
            android:paddingTop="@dimen/album_dp_15"
            android:text="我的收藏"
            android:paddingRight="@dimen/dip_10"
            android:drawableRight="@mipmap/icon_right"
            android:textColor="#333333"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dip_10"
            android:background="#EFF1F4"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_height="@dimen/dip_1" />
        <TextView
            android:id="@+id/tv_my_communty"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dip_10"
            android:drawablePadding="@dimen/dip_10"
            android:drawableLeft="@mipmap/icon_fuwuhao"
            android:paddingBottom="@dimen/album_dp_15"
            android:paddingTop="@dimen/album_dp_15"
            android:text="服务号管理"
            android:paddingRight="@dimen/dip_10"
            android:drawableRight="@mipmap/icon_right"
            android:textColor="#333333"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="match_parent"
            android:background="#EFF1F4"
            android:layout_height="8dip" />
        <TextView
            android:id="@+id/sgs"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dip_10"
            android:drawablePadding="@dimen/dip_10"
            android:drawableLeft="@mipmap/icon_fankuijianyi"
            android:paddingBottom="@dimen/album_dp_15"
            android:paddingTop="@dimen/album_dp_15"
            android:text="反馈建议"
            android:paddingRight="@dimen/dip_10"
            android:drawableRight="@mipmap/icon_right"
            android:textColor="#333333"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dip_10"
            android:background="#EFF1F4"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_height="@dimen/dip_1" />
        <TextView
            android:id="@+id/tv_numsetting"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dip_10"
            android:drawablePadding="@dimen/dip_10"
            android:drawableLeft="@mipmap/icon_seting"
            android:paddingBottom="@dimen/album_dp_15"
            android:paddingTop="@dimen/album_dp_15"
            android:text="账号设置"
            android:paddingRight="@dimen/dip_10"
            android:drawableRight="@mipmap/icon_right"
            android:textColor="#333333"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>