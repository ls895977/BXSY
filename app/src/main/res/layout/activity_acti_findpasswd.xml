<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Acti_findpasswd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/headimg"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_60"
            android:src="@mipmap/app_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_10"
            android:gravity="center"
            android:text="找回密码" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingLeft="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_1"
                android:layout_marginRight="@dimen/dip_30"
                android:background="#FFE5E5E5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="手机号"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_16sp" />

                <EditText
                    android:id="@+id/find_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dip_30"
                    android:background="@null"
                    android:hint="请输入注册手机号码"
                    android:paddingLeft="46dip"
                    android:paddingTop="@dimen/dip_10"
                    android:paddingBottom="@dimen/dip_10"
                    android:textSize="@dimen/fond_14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_1"
                android:layout_marginRight="@dimen/dip_30"
                android:background="#FFE5E5E5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="验证码"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_16sp" />

                <EditText
                    android:id="@+id/bregister_code"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="111"
                    android:background="@null"
                    android:hint="填写验证码"
                    android:paddingLeft="47dip"
                    android:paddingTop="@dimen/dip_10"
                    android:paddingBottom="@dimen/dip_10"
                    android:textSize="@dimen/fond_14sp" />

                <TextView
                    android:id="@+id/btv_getcode"
                    android:layout_width="@dimen/dip_90"
                    android:background="@drawable/re_boder"
                    android:layout_height="28dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dip_30"
                    android:layout_gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/blue_tiny"
                    android:textSize="@dimen/fond_12sp" />


            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_1"
                android:layout_marginRight="@dimen/dip_30"
                android:background="#FFE5E5E5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="新密码"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_16sp" />

                <EditText
                    android:id="@+id/newpasswd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dip_30"
                    android:background="@null"
                    android:hint="请输入新的密码"
                    android:paddingLeft="46dip"
                    android:paddingTop="@dimen/dip_10"
                    android:paddingBottom="@dimen/dip_10"
                    android:textSize="@dimen/fond_14sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_1"
                    android:layout_marginRight="@dimen/dip_30"
                    android:background="#FFE5E5E5" />

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_1"
                android:layout_marginRight="@dimen/dip_30"
                android:background="#FFE5E5E5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="新密码"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_16sp" />

                <EditText
                    android:id="@+id/newpasswdagain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dip_30"
                    android:background="@null"
                    android:hint="请再次输入新的密码"
                    android:paddingLeft="46dip"
                    android:paddingTop="@dimen/dip_10"
                    android:paddingBottom="@dimen/dip_10"
                    android:textSize="@dimen/fond_14sp" />

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_1"
                android:layout_marginRight="@dimen/dip_30"
                android:background="#FFE5E5E5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <com.maoyongxin.myapplication.tool.clickanimview.BamTextView
            android:id="@+id/next_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_30"
            android:layout_marginTop="@dimen/dip_40"
            android:layout_marginRight="@dimen/dip_30"
            android:background="@drawable/lg_bt"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_10"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_16sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>