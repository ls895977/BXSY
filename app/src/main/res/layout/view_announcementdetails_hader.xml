<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_margin="3dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="5dp"
                        >

                        <LinearLayout
                            android:id="@+id/ll_topcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_radius_feedback1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/fb_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"

                                android:textColor="#FF666666"
                                android:textSize="@dimen/fond_14sp"
                                android:maxLines="1"

                                android:textStyle="bold"
                                android:text="用户"
                                android:paddingTop="14dp"
                                android:paddingBottom="6dp"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center_vertical"

                                    >
                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:id="@+id/fb_head"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:riv_corner_radius="20dp"
                                        android:scaleType="center"
                                        android:src="@mipmap/user_head_img"
                                        android:layout_gravity="center_horizontal"


                                        />



                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:orientation="vertical"
                                    >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginBottom="3dp"
                                        >
                                        <TextView
                                            android:id="@+id/qq_account"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start|top"
                                            android:text="￥: 10000"
                                            android:textStyle="bold"
                                            android:textColor="@color/RED"

                                            android:textSize="@dimen/fond_16sp"
                                            android:layout_weight="1"
                                            />
                                        <TextView
                                            android:id="@+id/fbtime"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="发布时间"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/fond_16sp"
                                            android:gravity="right"/>
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.3dp"
                                        android:background="@color/gray1"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginTop="5dp"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="8dp"
                                        >
                                        <TextView
                                            android:id="@+id/area"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="地址：详情见官网"
                                            android:textColor="@color/gray"

                                            android:textSize="@dimen/fond_12sp" />

                                        <TextView
                                            android:id="@+id/fb_user_phone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="点击这里电话联系"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/fond_12sp"



                                            />

                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>


                            <TextView
                                android:id="@+id/phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/dip_10"
                                android:text="电话：详情见官网"
                                android:textColor="#FF666666"
                                android:textSize="@dimen/fond_12sp"
                                android:visibility="gone"

                                />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>





            <TextView
                android:id="@+id/gonggao_delate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"


                android:drawableRight="@mipmap/icon_dele"
                android:padding="@dimen/dip_5"
                android:text="删除"
                android:textSize="@dimen/fond_12sp"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="@dimen/dip_5"
                android:text="———需求描述———"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/fond_14sp"
                android:gravity="center"
             />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="3dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/classifyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder_line"
                    android:paddingLeft="@dimen/dip_5"
                    android:paddingTop="@dimen/dip_2"
                    android:paddingRight="@dimen/dip_5"
                    android:paddingBottom="@dimen/dip_2"
                    android:text="招聘"
                    android:textColor="#FF2F60F3"
                    android:textSize="@dimen/fond_12sp"
                    android:layout_margin="2dp"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dip_10"
                    android:text="人人"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/fond_14sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_01"
                android:background="#FFEFF1F4" />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingTop="8dp"
                    android:paddingBottom="10dp"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/fond_13sp"

                    />
                <TextView
                    android:id="@+id/toWeb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="15dp"
                    android:textColor="@color/blue_tiny"
                    android:text="点击进入官网查看"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_10"
                android:background="#FFEFF1F4" />

            <TextView
                android:id="@+id/tv_zongtaoshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dip_10"
                android:text="评论（0）"
                android:textColor="#FF666666"
                android:textSize="@dimen/fond_12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_1"
                android:background="#FFEFF1F4" />



            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    <include
        android:id="@+id/empty_view"
        layout="@layout/view_empty_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"/>

</LinearLayout>
